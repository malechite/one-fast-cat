{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "paths": {
    "*/": ["./node_modules/*"],
    "~/": ["./src"]
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "test",
  ]
}